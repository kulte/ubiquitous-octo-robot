<!DOCTYPE html>
<html>
  <head>
    <title>BondStreet Application Flow</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to root_path, class: "navbar-brand" do %>
            <%= image_tag "logo" %>
          <% end %>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <% if current_user.present? %>
            <li class="dropdown">
              <%= link_to "#", class: "dropdown-toggle", data: { toggle: "dropdown" }, role: "button", aria: { haspopup: "true", expanded: "false" } do %>
                <%= fa_icon "bars" %>
              <% end %>
              <ul class="dropdown-menu">
                <% if policy(:step).show_stage_1? %>
                  <li><%= link_to "Step 1", step_path(:'1') %></li>
                <% else %>
                  <li class="disabled"><%= link_to "Step 1", "#" %></li>
                <% end %>
                <% if policy(:step).show_stage_2? %>
                  <li><%= link_to "Step 2", step_path(:'2') %></li>
                <% else %>
                  <li class="disabled"><%= link_to "Step 2", "#" %></li>
                <% end %>
                <% if policy(:step).show_stage_3? %>
                  <li><%= link_to "Step 3", step_path(:'3') %></li>
                <% else %>
                  <li class="disabled"><%= link_to "Step 3", "#" %></li>
                <% end %>
                <% if policy(:step).show_stage_4? %>
                  <li><%= link_to "Step 4", step_path(:'4') %></li>
                <% else %>
                  <li class="disabled"><%= link_to "Step 4", "#" %></li>
                <% end %>
                <% if policy(:step).show_stage_5? %>
                  <li><%= link_to "Step 5", step_path(:'5') %></li>
                <% else %>
                  <li class="disabled"><%= link_to "Step 5", "#" %></li>
                <% end %>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><p class="navbar-text"><%= link_to "Log In", new_user_session_path, class: "navbar-link" %> or <%= link_to "Sign Up", new_user_registration_path, class: "navbar-link" %></p></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
